generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:password@localhost:3306/washconnect?schema=public"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.VarChar(255)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique @db.VarChar(255)
  username    String    @unique @db.VarChar(255)
  firstName   String    @db.VarChar(255)
  lastName    String    @db.VarChar(255)
  password    String    @db.VarChar(255)
  balance     Float     @default(0)
  phoneNumber String    @db.VarChar(255)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Address     Address[]
  Machine     Machine[]
  Agenda      Agenda[]
}

model Address {
  id        Int              @id @default(autoincrement())
  line1     String           @db.VarChar(255)
  line2     String?          @db.VarChar(255)
  city      String           @db.VarChar(255)
  zip       String           @db.VarChar(255)
  country   SupportedCountry
  userId    Int
  user      User             @relation(fields: [userId], references: [id])
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  Machine   Machine[]
}

enum SupportedCountry {
  FRA // France
  CHE // Switzerland
}

model Machine {
  id                 Int      @id @default(autoincrement())
  adTitle            String   @db.VarChar(255)
  adDescription      String?  @db.Text
  priceWashing       Float?
  priceDrying        Float?
  priceWashingDrying Float?
  detergentIncluded  Boolean  @default(false)
  maxCapacity        Int      @default(0)
  washDuration       Int?     @default(60)
  dryDuration        Int?     @default(60)
  hasWasher          Boolean  @default(true)
  hasDryer           Boolean  @default(true)
  addressId          Int
  address            Address  @relation(fields: [addressId], references: [id])
  userId             Int
  user               User     @relation(fields: [userId], references: [id])
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  Agenda             Agenda[]
  imgUrl             String   @db.VarChar(255) @default("")
  manufacturer       String?  @db.VarChar(255) @default("")
}

model Agenda {
  id          Int         @id @default(autoincrement())
  timeSlot    DateTime
  machineType MachineType @default(WASHING_MACHINE)
  userId      Int?
  user        User?       @relation(fields: [userId], references: [id])
  machineId   Int
  machine     Machine     @relation(fields: [machineId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum MachineType {
  WASHING_MACHINE
  DRYER
}
